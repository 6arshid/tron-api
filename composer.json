{
    "name": "6arshid/tron-api",
    "description": "A PHP API for interacting with Tron (Trx)",
    "license": "MIT",
    "type":   "library",
    "homepage": "https://github.com/iexbase/tron-api",
    "authors": [
        {
            "name": "Shamsudin Serderov",
            "email": "steein.shamsudin@gmail.com"
        }
    ],
    "keywords": [
        "iexbase",
        "tron-lib",
        "tron-php",
        "tron-api",
        "tron-rest-api"
    ],

  "require": {
    "php": "^8.2",
    "guzzlehttp/guzzle": "^7.7",                        // Latest 7.x (8.x requires PSR-20)
    "iexbase/web3.php": "^2.0.2",                      // Latest tagged version
    "kornrunner/secp256k1": "^0.3",                    // Latest release
    "simplito/elliptic-php": "^1.1",                   // Minor update (security)
    "ext-json": "*",
    "ext-bcmath": "*"
},

"require-dev": {
    "phpunit/phpunit": "^10.0"                         // Compatible with PHP 8.2
}

    "autoload": {
        "psr-4": {
            "IEXBase\\TronAPI\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "IEXBase\\TronAPI\\Test\\": "tests"
        }
    },

    "config": {
        "sort-packages": true
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
