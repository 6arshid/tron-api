{
    "name": "6arshid/tron-api",
    "description": "A PHP API for interacting with Tron (Trx)",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/6arshid/tron-api",
    "authors": [
        {
            "name": "Arshid",
            "email": "your@email.com"
        }
    ],
    "keywords": [
        "tron",
        "tron-api",
        "tron-php",
        "trx",
        "blockchain",
        "web3"
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.7",
        "6arshid/web3.php": "^2.0",
        "kornrunner/secp256k1": "^0.3",
        "simplito/elliptic-php": "^1.0",
        "ext-json": "*",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "IEXBase\\TronAPI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IEXBase\\TronAPI\\Test\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "8.2.12"
        },
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
