{
  "name": "6arshid/tron-api",
  "description": "A PHP API for interacting with Tron (Trx)",
  "license": "MIT",
  "type": "library",
  "homepage": "https://github.com/6arshid/tron-api",
  "authors": [
    {
      "name": "6arshid",
      "email": "6arshid@gmail.com"
    }
  ],
  "keywords": [
    "iexbase",
    "tron-lib",
    "tron-php",
    "tron-api",
    "tron-rest-api"
  ],
  "require": {
    "php": ">=8.2",
    "guzzlehttp/guzzle": "^7.7",
    "kornrunner/secp256k1": "^0.3",
    "simplito/elliptic-php": "^1.0",
    "ext-json": "*",
    "ext-bcmath": "*",
    "6arshid/web3.php": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "IEXBase\\TronAPI\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IEXBase\\TronAPI\\Test\\": "tests"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/6arshid/web3.php"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  }
}
