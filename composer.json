{
    "name": "6arshid/tron-api",
    "description": "A modern PHP API for interacting with the Tron (TRX) blockchain.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/6arshid/tron-api",
    "authors": [
        {
            "name": "Shamsudin Serderov",
            "email": "steein.shamsudin@gmail.com"
        }
    ],
    "keywords": [
        "tron",
        "trx",
        "tronapi",
        "blockchain",
        "php",
        "web3",
        "crypto"
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/6arshid/tron-api"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.7",
        "iexbase/web3.php": "^2.0.1",
        "kornrunner/secp256k1": "^0.3",
        "simplito/elliptic-php": "^1.0",
        "ext-json": "*",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "IEXBase\\TronAPI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IEXBase\\TronAPI\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.2.12"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
